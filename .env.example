# Environment Variables for llmbattler
#
# Copy this file to .env and configure for your environment:
#   cp .env.example .env
#
# Note: .env is ignored by git for security

# Database URLs
POSTGRES_URI=postgresql+asyncpg://postgres:postgres@localhost:5432/llmbattler
MONGODB_URI=mongodb://localhost:27017/llmbattler

# Backend CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Worker Settings
WORKER_INTERVAL_HOURS=1
WORKER_TIMEZONE=UTC

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Model Configuration Path
MODELS_CONFIG_PATH=config/models.yaml

# LLM API Timeouts (seconds)
LLM_CONNECT_TIMEOUT=5
LLM_READ_TIMEOUT=30
LLM_WRITE_TIMEOUT=5
LLM_POOL_TIMEOUT=5

# LLM API Retry Settings
LLM_RETRY_ATTEMPTS=3
LLM_RETRY_BACKOFF_BASE=1.0

# Battle Settings
MAX_FOLLOW_UPS=5

# Leaderboard Settings
MIN_VOTES_FOR_LEADERBOARD=5

# ELO Settings
INITIAL_ELO=1500
K_FACTOR=32

# MongoDB Connection Pool
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# PostgreSQL Connection Pool
POSTGRES_POOL_SIZE=5
POSTGRES_MAX_OVERFLOW=10
